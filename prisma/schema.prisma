generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  password     String
  name         String
  role         UserRole      @default(jobseeker)
  companyId    String?
  createdAt    DateTime      @default(now())
  applications Application[]
  bookmarks    Bookmark[]
  company      Company?      @relation(fields: [companyId], references: [id])
}

model Company {
  id          String  @id @default(cuid())
  name        String
  description String?
  website     String?
  logoUrl     String?
  jobs        Job[]
  users       User[]
}

model Job {
  id           String        @id @default(cuid())
  title        String
  description  String
  salary       Int
  location     String
  type         JobType
  companyId    String
  createdAt    DateTime      @default(now())
  applications Application[]
  bookmarks    Bookmark[]
  category     CategoryType      
  company      Company       @relation(fields: [companyId], references: [id])
  tags         JobTag[]  
}

model Application {
  id          String   @id @default(cuid())
  userId      String
  jobId       String
  coverLetter String?
  resumeUrl   String?
  createdAt   DateTime @default(now())
  job         Job      @relation(fields: [jobId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
}

enum CategoryType {
  software_development
  design
  marketing
  sales
  hr
  finance
  other
}

model Tag {
  id   String   @id @default(cuid())
  name String   @unique
  jobs JobTag[]
}

model JobTag {
  id    String @id @default(cuid())
  jobId String
  tagId String
  job   Job    @relation(fields: [jobId], references: [id])
  tag   Tag    @relation(fields: [tagId], references: [id])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  jobId     String
  createdAt DateTime @default(now())
  job       Job      @relation(fields: [jobId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

enum JobType {
  full_time
  part_time
  contract
}

enum UserRole {
  jobseeker
  employer
}
